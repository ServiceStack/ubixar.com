{
    "DebugMode": true,
    "DetailedErrors": true,
    "Logging": {
        "IncludeScopes": false,
        "Debug": {
            "LogLevel": {
                "Default": "Debug",
                "System": "Information",
                "Microsoft": "Information"
            }
        },
        "Console": {
            "LogLevel": {
                "Default": "Debug",
                "System": "Information",
                "Microsoft": "Information"
            }
        }
    },
    "AppConfig": {
      "PublicBaseUrl": "https://gateway.com",
      "TaskConnection": "DataSource=../App_Data/tasks/{db};Cache=Shared",
      "AppDataPath": "../App_Data",
      "ArtifactsPath": "../App_Data/artifacts",
      "FilesPath": "../App_Data/files"
    }
}
